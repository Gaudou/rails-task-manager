<div class="container text-center p-2">
  <h1>My task Manager by @Gaudou</h1>
  <ul>
    <% Task.all.each do |task| %>
       <li class="alert alert-info"><%= link_to "#{task.title}", task_path(task) %></li>
    <% end %>
  </ul>
  <p class="btn btn-primary" href=""><%= link_to "Add a new task", tasks_new_path %></p>
</div>



